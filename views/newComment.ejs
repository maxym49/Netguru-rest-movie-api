<% include ./partials/header.ejs %>
<div class="container">
    <form action="/comments/new" method="POST">
        <div class="row">
            <div class="input-field col s12 m6 l6 ">
                <input name="comment" placeholder="Add your comment!" id="comment" type="text" class="validate"
                       style="color: #ffffff" required>
                <label class="active" for="comment">Text</label>
                <div class="input-field col s6">
                    <i class="material-icons prefix">fingerprint</i>
                    <input name="movieId" id="icon_prefix" type="text" class="validate" style="color: #ffffff" required>
                    <label for="icon_prefix">Movie ID</label>
                </div>
                <button class="btn-large waves-effect waves-light" type="submit" name="action" style="margin: 100px 0; display: block">Add comment
                    <i class="material-icons right">insert_comment</i>
                </button>
            </div>
        </div>
    </form>
</div>
