<% include ./partials/header.ejs %>
<div class="container">
    <div class="row">
        <h1 class="center-align" style="color: #ffffff">Movies!</h1>
        <% movies.forEach(function(movie){ %>
        <div class="m12 l4 col s12">
            <div class="card">
                <div class="card-image">
                    <img src="<%= movie.movie.Poster %>">
                    <span class="card-title"><%= movie.movie.Title %></span>
                </div>
                <div class="card-content">
                    <p><%= movie.movie.Plot %></p>
                </div>
            </div>
        </div>
        <% }); %>
    </div>
    <div class="btn-wrapper">
        <form style="display: inline-block; margin: 20px " action="/search" method="GET">
            <button class="btn-large waves-effect waves-light" type="submit" name="action">
                <i class="material-icons left">arrow_back</i>
                Back to Search
            </button>
        </form>
        <form target="_blank" style="display: inline-block; margin: 20px 20px " action="/api/movies"
              method="GET">
            <button class="btn-large waves-effect waves-light red darken-2" type="submit" name="action">
                See the movie list in json
                <i class="material-icons right">arrow_forward</i>
            </button>
        </form>
    </div>
    <div class="row" style="margin-top: 40px">
        <h4 class="center-align" style="color: #ffffff">Find the movie's id (List in JSON above), before you will add comment!</h4>
        <div class="btn-wrapper">
            <form style="display: inline-block; margin: 20px 20px " action="/comments/new"
                  method="GET">
                <button class="btn-large waves-effect waves-light light-blue accent-3" type="submit" name="action">
                    Add comment!
                    <i class="material-icons right">comment</i>
                </button>
            </form>
        </div>
    </div>
</div>
<% include ./partials/footer.ejs %>